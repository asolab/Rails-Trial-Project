<title>Contact Form </title>
 
  <body>
  

  <div class="content">
    
    <div class="container">
      <div class="row align-items-stretch no-gutters contact-wrap">
        <div class="col-md-12">
          <div class="form h-100">

            <h3>Send us a message</h3>
            
              <div class="row">

                <%= form_for @contact do |f| %>
                <div class="col-md-8 form-group mb-5">
                  <%= f.label :name, class: "col-form-label" %></br>
                  <%= f.text_field :name, class: "col-md-6 contact-form-text-area", placeholder: "Your Name" %></br>
                 
                </div>
                <div class="col-md-6 form-group mb-5">
                  
                  <%= f.label :email, class: "col-form-label" %></br>
                  <%= f.text_field :email, class: "col-md-8 contact-form-text-area", placeholder: "#sendgrid use aso@hausasports.art as your email" %></br>
                  
                </div>
              </div>

          

              <div class="row">
                <div class="col-md-12 form-group mb-5">
              
                  <%= f.label :message, class: "col-form-label" %></br>
                   <%= f.text_area :message, rows: 8, cols: 80,  class: "contact-form-text-area", 
            placeholder: "Write your message here, remember to include your email in your mail ğŸ˜Š, Thanks! "%></br>
                </div>
              </div>

              <div class= "d-none">
        <%= f.label :nickname %>
        <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
      </div>
              
              <div class="row">
            <%= f.submit 'Send Message', class: 'btn btn-primary' %>
              </div>
           
              <% end %>

          </div>
        </div>
       
             
          </div>
        </div>
      </div>
    </div>

  </div>
    
    



  </body>
